@model HousingSociety.Models.Login_Society

@{
    ViewBag.Title = "Login";
}

<h2>Society Administrator Login</h2>

<head>
    <style>
        body {
            background-image: url('../../Content/Images/societylogin.jpg');
            background-repeat: no-repeat;
            background-position: center;
            margin-right: 500px;
            background-size: cover;
        }
    </style>
</head>




@using (Html.BeginForm())
{
    if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>Login_Society</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">     
            <font color="#ffffff">
                @Html.LabelFor(model => model.Society_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                </font>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Society_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Society_Name, "", new { @class = "text-danger" })
                    </div>
</div>

        <div class="form-group">
            <font color="#ffffff">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                </font>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
        </div>

        <div class="form-group">
            <font color="#ffffff">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                </font>
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LOGIN" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @*@Html.ActionLink("Back to List", "Index")*@
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
