@model HousingSociety.Models.Login_Admin

@{
    ViewBag.Title = "Login";
}

<head>
    <style>
        body {
            background-image: url('../../Content/Images/admin1.jpg');
            background-color: #cccccc;
            width: auto;
            height: auto;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>

<body>

    <h2><font color="white"> Web Administration Login</font></h2>

    @using (Html.BeginForm())
    {
        if (ViewBag.Message != null)
        {
            <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
            </script>
        }
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @*<h4>Login_Admin</h4>*@
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <font color="#ffffff">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                        </font>
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                </div>

                <div class="form-group">
                    <font color="#ffffff">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                        </font>
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
</div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Login" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </body>
